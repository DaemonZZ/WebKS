@model DataProvider.Advertisement

@{
    ViewBag.Title = "NewArticle";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
    SelectList listType = ViewBag.ListType;
}
@section Scripts {
    <script src="~/Assets/Admin/js/ckeditor.js"></script>
    <script src="~/CKFinderScripts/ckfinder.js"></script>
    <script type="text/javascript">

        ClassicEditor
            .create(document.querySelector('#editor'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <h4>New Post</h4>
        <div class="row mt-5 ">
            <div class="col-1">
                <h5>Title: </h5>
            </div>
            <div class="col-9">
                @Html.TextBoxFor(p => p.adName, new { @class = "form-control" })
            </div>
            <div class="col-2"></div>
        </div>
        <div class="row mt-3">
            <div class="col-1">
                <h5>Type:</h5>
            </div>
            <div class="col-3">
                @Html.DropDownListFor(p => p.AdType, listType, "---Select Type---", new { @class = "form-control" })
            </div>
            <div class="col-2 ml-1">
                <h5>Thumbnail:</h5>
            </div>

        </div>
        <div class="row mt-3">
            <div class="col-12"><h5>Decription:</h5></div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <div id="editor"></div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                <input class="btn btn-reset btn-dark" type="reset" value="Reset"/>
            </div>
            <div class="col-6">
                <input class="btn-submit btn-primary btn" type="submit" value="Submit"/>
            </div>
        </div>

    </div>
}


