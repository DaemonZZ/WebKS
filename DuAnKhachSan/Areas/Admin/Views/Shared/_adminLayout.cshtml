
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link href="~/Content/datepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Assets/Admin/css/admin.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/main.css" />
    <link rel="stylesheet"href="~/Assets/Admin/css/util.css" />
    @*<script type="text/javascript">
        var domain = "@Request.Url.Scheme://@Request.Url.Host";
    </script>*@
    
</head>
<body>
    <form id="form1" runat="server">
        <nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn btn-secondary">
                    <i class="fas fa-align-left"></i>
                    <span></span>
                </button>
                <a class="navbar-branch ml-2 mb-1" href="/">
                    <img src="~/Image/logo.png" height="60" />
                </a>
                <div class="ml-3">
                    <h4>Adminstrator Area</h4>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Admin">Control Panel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">How to use</a>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link">
                                @Html.ActionLink("Log Out", "Logout", "Login")
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!--Sidebar-->
        <div class="wrapper">
            <!-- Sidebar  -->
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3>Control Panel</h3>
                    <strong>CP</strong>
                </div>

                <ul class="list-unstyled components">

                    <li>
                        <a href="/Admin/Base/Index">
                            <i class="fas fa-home"></i>
                            Main Menu
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Base/Room">
                            <i class="fas fa-bed"></i>
                            Room
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Promotion/Promotion">
                            <i class="fas fa-gift"></i>
                            Promotions
                        </a>
                    </li>

                    <li>
                        <a href="/Admin/News/NewArticle">
                            <i class="fas fa-plus"></i>
                            New post
                        </a>
                    </li>
                    <li class="active">
                        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fas fa-newspaper"></i>
                            Categories
                        </a>
                        <ul class="collapse list-unstyled" id="homeSubmenu">
                           
                            <li>
                                <a href="/Admin/News/Category">Post List</a>
                            </li>
                            

                        </ul>
                    </li>


                    <li>
                        <a href="#">
                            <i class="fas fa-copy"></i>
                            Statistical
                        </a>
                        <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fas fa-wrench"></i>
                            Customize
                        </a>
                        <ul class="collapse list-unstyled" id="pageSubmenu">
                            <li>
                                <a href="UserCP.aspx">Home Slider</a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#">
                            <i class="fas fa-question"></i>
                            FAQ
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fas fa-paper-plane"></i>
                            Help
                        </a>
                    </li>
                </ul>


            </nav>

            <!-- Page Content  -->
            <div id="content">
                @RenderBody()
            </div>
        </div>

        <div>
        </div>
    </form>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <!-- Popper.JS -->
    <script src="~/Scripts/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js"></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/Scripts/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="~/Assets/Admin/js/main.js"></script>

    @RenderSection("Scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>
</html>
